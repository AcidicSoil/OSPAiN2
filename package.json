{
  "name": "cody",
  "displayName": "Cody - Development Mode Assistant",
  "description": "A VS Code extension for managing development modes in the Ollama Ecosystem Project",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cody.switchMode",
        "title": "Cody: Switch Development Mode"
      },
      {
        "command": "cody.startChat",
        "title": "Cody: Start Chat"
      },
      {
        "command": "cody.processSelection",
        "title": "Cody: Process Selection"
      },
      {
        "command": "cody.forceContextScan",
        "title": "Cody: Scan For Relevant Context Files"
      },
      {
        "command": "cody.toggleAutoContextScan",
        "title": "Cody: Toggle Automatic Context Scanning"
      }
    ],
    "configuration": {
      "title": "Cody",
      "properties": {
        "cody.currentMode": {
          "type": "string",
          "default": "engineering",
          "enum": [
            "design",
            "engineering",
            "testing",
            "deployment",
            "maintenance"
          ],
          "description": "The current development mode"
        },
        "cody.contextScanner.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable predictive context scanning"
        },
        "cody.contextScanner.maxFilesToScan": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of files to scan for relevant context"
        },
        "cody.contextScanner.maxFilesToSuggest": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of files to suggest adding to context"
        },
        "cody.contextScanner.minRelevanceScore": {
          "type": "number",
          "default": 0.6,
          "description": "Minimum relevance score threshold (0.0-1.0)"
        },
        "cody.contextScanner.scanIntervalMs": {
          "type": "number",
          "default": 30000,
          "description": "Scan interval in milliseconds"
        },
        "cody.contextScanner.enableAutomaticAddition": {
          "type": "boolean",
          "default": false,
          "description": "Automatically add highly relevant files to context"
        },
        "cody.contextScanner.scanDepth": {
          "type": "string",
          "default": "medium",
          "enum": [
            "shallow",
            "medium",
            "deep"
          ],
          "description": "Depth of context scanning"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "cody.switchMode",
          "group": "cody"
        },
        {
          "command": "cody.startChat",
          "group": "cody"
        },
        {
          "command": "cody.processSelection",
          "group": "cody"
        },
        {
          "command": "cody.forceContextScan",
          "group": "cody"
        },
        {
          "command": "cody.toggleAutoContextScan",
          "group": "cody"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react-icons": "^2.2.7",
    "@types/three": "^0.174.0",
    "@types/vscode": "^1.60.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6",
  "dependencies": {
    "axios": "^1.8.3",
    "commander": "^11.1.0",
    "react-force-graph": "^1.47.4",
    "react-icons": "^5.5.0"
  }
}
