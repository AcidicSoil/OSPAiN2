    },
    {
      "name": "search_entities",
      "description": "Searches for entities in the knowledge graph",
      "server": "Knowledge Graph",
      "inputs": [
        {
          "name": "query",
          "type": "string",
          "description": "Search query",
          "required": true
        },
        {
          "name": "types",
          "type": "array",
          "description": "Filter by entity types",
          "default": []
