# Notion API Integration Configuration

# Your Notion API key (required)
# Get this from https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here

# ID of the Notion database for tasks (required)
# This is the ID in the URL of your database
# Example: https://www.notion.so/{workspace_name}/{database_id}?v={view_id}
NOTION_DATABASE_ID=your_notion_database_id_here

# Port for the MCP server to listen on (optional)
PORT=8589

# Enable debug logging (optional)
DEBUG=false 